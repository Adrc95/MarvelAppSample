<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.adrc95.marvelappsample.ui.common.ModeType"/>

        <variable
            name="viewModel"
            type="com.adrc95.marvelappsample.ui.navhost.NavHostViewModel"
            />
        <variable
            name="data"
            type="com.adrc95.marvelappsample.ui.navhost.NavHostMenuObservable"
            />
    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{() -> viewModel.onChangeTheme(data.darkmode)}"
        android:clickable="true"
        android:focusable="true"
        app:visible="@{false}"
        android:background="?android:attr/actionBarItemBackground">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@{data.darkmode == ModeType.NIGHT ? @drawable/ic_dark_mode : @drawable/ic_light_mode}"
            app:tint="@color/white"
            tools:srcCompat="@drawable/ic_light_mode"
            />
    </FrameLayout>
</layout>